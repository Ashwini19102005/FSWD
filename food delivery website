<script>
const restaurants = [
  {id:1,name:'Red Oven Pizza',tags:['pizza'],menu:[{name:'Margherita',price:249},{name:'Pepperoni',price:349}]},
  {id:2,name:'Burger Hub',tags:['burgers'],menu:[{name:'Classic Beef',price:199},{name:'Crispy Fries',price:79}]},
  {id:3,name:'Sushi Harbor',tags:['sushi'],menu:[{name:'California Roll',price:279},{name:'Salmon Sashimi',price:399}]},
  {id:4,name:'Sweet Tooth',tags:['dessert'],menu:[{name:'Chocolate Cake',price:159},{name:'Vanilla Shake',price:129}]}
];

let cart=[];

function renderRestaurants(filter='all'){
  const list=document.getElementById('restaurantList');
  list.innerHTML='';
  let visible=restaurants.filter(r=>filter==='all'||r.tags.includes(filter));
  visible.forEach(r=>{
    const card=document.createElement('div');card.className='card';
    card.innerHTML=`<div class="rest-hero">${r.name}</div><div>${r.tags.join(', ')}</div><button class="btn" onclick="openMenu(${r.id})">View Menu</button>`;
    list.appendChild(card);
  })
}

function openMenu(id){
  const r=restaurants.find(x=>x.id===id);
  let menuHTML='';
  r.menu.forEach(item=>{
    menuHTML+=`<div class="menu-item"><div>${item.name}</div><div>₹${item.price}</div><button class="btn" onclick="addToCart('${item.name}',${item.price})">Add</button></div>`;
  })
  document.getElementById('main').innerHTML=`<h2>${r.name} Menu</h2>${menuHTML}<button class="btn" onclick="renderRestaurants()">Back</button>`;
}

function addToCart(name,price){
  const existing=cart.find(i=>i.name===name);
  if(existing){existing.qty++}else{cart.push({name,price,qty:1})}
  renderCart();
}

function renderCart(){
  const list=document.getElementById('cartList');
  list.innerHTML='';
  let total=0;
  cart.forEach(item=>{
    total+=item.price*item.qty;
    list.innerHTML+=`<div class="cart-item"><div>${item.qty}x ${item.name}</div><div>₹${item.price*item.qty}</div></div>`;
  })
  document.getElementById('cartItemsCount').innerText=cart.length;
  document.getElementById('cartTotal').innerText=total;
}

document.querySelectorAll('.pill').forEach(b=>b.onclick=()=>renderRestaurants(b.dataset.filter));
document.getElementById('searchBtn').onclick=()=>{
  const q=document.getElementById('searchInput').value.toLowerCase();
  const list=document.getElementById('restaurantList');
  list.innerHTML='';
  restaurants.filter(r=>r.name.toLowerCase().includes(q)).forEach(r=>{
    const card=document.createElement('div');card.className='card';
    card.innerHTML=`<div class="rest-hero">${r.name}</div><button class="btn" onclick="openMenu(${r.id})">View Menu</button>`;
    list.appendChild(card);
  })
}
document.getElementById('checkoutBtn').onclick=()=>alert('Checkout feature demo only');
document.getElementById('clearBtn').onclick=()=>{cart=[];renderCart()};

renderRestaurants();
renderCart();
</script>
</body>
</html>
