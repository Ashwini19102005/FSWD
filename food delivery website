  <div class="sidebar">
    <div class="logo">FF</div>
    <div class="h1">FeastFlow</div>
    <input id="searchInput" class="input" placeholder="Search restaurants" />
    <button id="searchBtn" class="btn">Search</button>
    <div class="filters">
      <div class="pill" data-filter="all">All</div>
      <div class="pill" data-filter="pizza">Pizza</div>
      <div class="pill" data-filter="burgers">Burgers</div>
      <div class="pill" data-filter="sushi">Sushi</div>
      <div class="pill" data-filter="dessert">Dessert</div>
    </div>
  </div>

  <div class="main" id="main">
    <h2>Restaurants</h2>
    <div id="restaurantList" class="restaurant-list"></div>
  </div>

  <div class="cart" id="cart">
    <h3>Your Cart (<span id="cartItemsCount">0</span>)</h3>
    <div class="cart-list" id="cartList"></div>
    <div class="total">Total: ₹ <span id="cartTotal">0</span></div>
    <button id="checkoutBtn" class="btn">Checkout</button>
    <button id="clearBtn" class="btn">Clear</button>
  </div>
